<main class="posts-page has-comments container">
  <section class="posts">
    <article class="post">
      <header>
        <nav>
          <%= image_tag "default-avatar.jpg", class: "photo"%>
          <h4>nome-do-usuario</h4>
        </nav>

        <nav class="actions">
          <div class="action">
            <%= embedded_svg "options.svg"%>
          </div>      
        </nav>
      </header>

      <section class="image">
        <%= image_tag "https://fastly.picsum.photos/id/9/5000/3269.jpg?hmac=cZKbaLeduq7rNB8X-bigYO8bvPIWtT-mh8GRXtU3vPc"%>
      </section>

      <div class="details">
        <section class="actions">
          <nav>
            <div class="action">
              <div class="like">
                <%= embedded_svg "like.svg"%>
              </div>
            </div>

            <div class="action">
              <%= embedded_svg "comment.svg"%>
            </div>
            
            <div class="action">
              <%= embedded_svg "share.svg"%>
            </div>
          </nav>

          <nav>
            <div class="action">
              <%= embedded_svg "save.svg"%>
            </div>
          </nav>
        </section>
      </div>
    </article>
  </section>
</main>